<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
<Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
        <PatternLayout pattern="%d %-5p [%t] %C{2} - %m%n"/>
    </Console>
</Appenders>
<Loggers>
    <Logger name="org.apache.log4j.xml" level="info"/>
    <Logger name="org" level="info"/>
    <Logger name="cz.muni.pa165.pneuservis" level="warn"/>
    <Logger name="cz.muni.pa165.pneuservis.data" level="info"/>
    <Logger name="cz.muni.pa165.pneuservis.mvc" level="debug"/>
    <Logger name="org.hibernate.tool.hbm2ddl.SchemaExport" level="off"/>
    <Logger name="org.hibernate.engine.jdbc.spi.SqlExceptionHelper" level="off" />
    <Logger name="org.hibernate" level="error"/>
    <Logger name="org.springframework.web" level="error"/>
    <Logger name="org.springframework" level="error"/>
    <Logger name="org.dozer" level="error"/>

    <Root level="info">
        <AppenderRef ref="STDOUT"/>
    </Root>
</Loggers>
</Configuration>